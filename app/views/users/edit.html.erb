<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
        <p id="notice"><%= flash[:notice] %></p>
          <% if @user.errors.any? %>
          <%= @user.errors.count %>件のエラーが発生しました
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
          <% end %>
      <%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>
        <div class="field">
          <%= f.label :name %><br />
          <%= f.text_field :name %>
        </div>
         <div class="form-group">
           <label for="inputImage">ProfileImage</label>
           <div><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></div>
          </div>
        <div class="field">
          <%= f.label :introduction %><br />
          <%= f.text_area :introduction %>
        </div>
        <div class="actions">
          <%= f.submit "Update User", class:"btn btn-sm btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
