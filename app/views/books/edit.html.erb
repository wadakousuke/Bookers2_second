<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
      <%= form_with model: @book, url: book_path(@book), method: :patch do |f| %>
        <div class="field">
          <%= f.label :Title %><br />
          <%= f.text_field :title %>
        </div>
        <div class="field">
          <%= f.label :Opinion %><br />
          <%= f.text_area :body %>
        </div>
        <div class="actions">
          <%= f.submit "Update Book", class:"btn btn-sm btn-success" %>
        </div>
        <div class="actions">
          <%= link_to "Show", book_path(@book) %>
          <span>|</span>
          <%= link_to "Back", books_path %>
        </div>
      <% end %>
    </div>
  </div>
</div>
